
/* 导航部分 */
.top-tab-container {
  display: flex;
  white-space: nowrap;
  height: 66rpx;
}

.top-tab-item {
  box-sizing: border-box;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
}

.top-tab-item .active {
  box-sizing: border-box;
  border-bottom: 6rpx solid #d43c33;
  border-radius: 6rpx;
}

/* 视频列表 */
.video-list-wrapper {
  margin-top: 20rpx;
  width: 100%;
  /* 设置高度，防止scroll-view导航滚动 */
  height: calc(100vh - 86rpx);
}

.video-list-wrapper .video-list-item{
  width: 100%;
  box-sizing: border-box;
  display: felx;
  flex-direction: column;
  padding: 0 3%;
  border-bottom: 1px solid #ccc;
}

.video-list-item .item-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.item-header image {
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.item-header .video-user {
  flex: 1;
  margin-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #333;
}

.item-header .right-operate {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
}

.operate-item {
  position: relative;
  margin-left: 50rpx !important;
}

.comment, .star {
  position: absolute;
  top: -28rpx;
  right: -34rpx;
  font-size: 20rpx;
}

.btn {
  display: inline !important;
  width: 32rpx !important;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 !important;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

/* 视频部分 */
.video-list-item .item-video {
  width: 100%;
  height: 360rpx;
  position: relative;
}

.item-video video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.item-video image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.video-list-item .item-footer {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}