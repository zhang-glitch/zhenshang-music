<view class="recomment-song-container">
  <view class="recomment-header">
    <image src="/static/images/recommendSong/recommendSong.jpg"></image>
    <view class="date">
      <text class="day">{{day}} / </text>
      <text class="month">{{month}}</text>
    </view>
  </view>
  <view class="recomment-operate">
    <view class="all-play">
      <text class="iconfont iconbofang"></text>
      <text class="all-play-text">播放全部</text>
    </view>
    <text class="iconfont iconhuaban"></text>
  </view>
  <view class="music-list-container">
    <MusicList
      musicList="{{recommentSongList}}"
      bindgetMusicIndex="getMusicIndex"
    ></MusicList>
  </view>
</view>